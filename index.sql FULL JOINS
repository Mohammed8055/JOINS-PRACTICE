(
  SELECT
        E.Name,
        D.DepartmentName,
        D.Location
    FROM
        Employees AS E
    LEFT JOIN
        Departments AS D
    ON
        E.DepartmentID = D.DepartmentID
)
UNION
(
    SELECT
        E.Name,
        D.DepartmentName,
        D.Location
    FROM
        Employees AS E
    RIGHT JOIN -- Simulating the RIGHT join by reversing tables for the LEFT join below
        Departments AS D
    ON
        E.DepartmentID = D.DepartmentID
);
